@{
    ViewBag.Title = "Quên mật khẩu";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            background: linear-gradient(135deg, #2e7d32, #4caf50);
            height: 100vh;
            overflow: hidden;
            margin: 0;
            padding: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .backdrop {
            position: absolute;
            width: 100%;
            height: 100%;
            background-image: url('https://images.unsplash.com/photo-1460925895917-afdab827c52f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1920&q=80');
            background-size: cover;
            background-position: center;
            filter: blur(8px);
            opacity: 0.6;
            z-index: -1;
        }

        .main-container {
            width: 500px;
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
            padding: 40px;
        }

        .form-title {
            color: #2e7d32;
            font-size: 28px;
            font-weight: 700;
            margin-bottom: 20px;
            text-align: center;
        }

        .form-control {
            background-color: #f7f7f7;
            border: none;
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 20px;
            transition: all 0.3s;
        }

            .form-control:focus {
                background-color: #fff;
                box-shadow: 0 0 0 2px #4caf50;
            }

        .form-label {
            font-weight: 600;
            color: #555;
        }

        .btn-submit {
            background: linear-gradient(135deg, #2e7d32, #4caf50);
            border: none;
            border-radius: 10px;
            color: white;
            font-weight: 600;
            padding: 15px;
            transition: all 0.3s;
            margin-top: 15px;
        }

            .btn-submit:hover {
                transform: translateY(-3px);
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
            }

        .btn-back {
            background: #f5f5f5;
            border: none;
            border-radius: 10px;
            color: #555;
            font-weight: 600;
            padding: 15px;
            transition: all 0.3s;
            margin-top: 15px;
        }

            .btn-back:hover {
                background: #e0e0e0;
            }

        .error-message {
            color: #ff4757;
            background-color: rgba(255, 71, 87, 0.1);
            border-left: 3px solid #ff4757;
            padding: 10px 15px;
            margin-bottom: 20px;
            border-radius: 0 5px 5px 0;
        }

        .success-message {
            color: #28a745;
            background-color: rgba(40, 167, 69, 0.1);
            border-left: 3px solid #28a745;
            padding: 10px 15px;
            margin-bottom: 20px;
            border-radius: 0 5px 5px 0;
        }

        .input-group {
            position: relative;
            margin-bottom: 20px;
        }

        .input-icon {
            position: absolute;
            top: 50%;
            left: 15px;
            transform: translateY(-50%);
            color: #999;
        }

        .input-with-icon {
            padding-left: 45px;
        }
    </style>
</head>
<body>
    <div class="backdrop"></div>
    <div class="main-container">
        <h2 class="form-title">Khôi phục mật khẩu</h2>
        <p class="text-center mb-4">Vui lòng nhập mã nhân viên và email đã đăng ký để tiếp tục.</p>

        @if (ViewBag.Error != null)
        {
            <div class="error-message">
                <i class="fas fa-exclamation-circle me-2"></i>@ViewBag.Error
            </div>
        }

        @if (ViewBag.Success != null)
        {
            <div class="success-message">
                <i class="fas fa-check-circle me-2"></i>@ViewBag.Success
            </div>
        }

        @using (Html.BeginForm("RequestPasswordReset", "Home", FormMethod.Post))
        {
            <div class="input-group">
                <i class="fas fa-id-card input-icon"></i>
                <input type="text" class="form-control input-with-icon" id="employeeId" name="employeeId" placeholder="Mã nhân viên" required>
            </div>
            <div class="input-group">
                <i class="fas fa-envelope input-icon"></i>
                <input type="email" class="form-control input-with-icon" id="email" name="email" placeholder="Email đã đăng ký" required>
            </div>
            <div class="row mt-3">
                <div class="col-6">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-back d-block">Quay lại</a>
                </div>
                <div class="col-6">
                    <button type="submit" class="btn btn-submit d-block w-100">Tiếp tục</button>
                </div>
            </div>
        }
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    @if (ViewBag.RedirectToLogin != null && ViewBag.RedirectToLogin)
    {
        <script>
            // Chuyển hướng về trang đăng nhập sau 5 giây
            setTimeout(function() {
                window.location.href = '@Url.Action("Index", "Home")';
            }, 5000); // 5000 milliseconds = 5 seconds
        </script>
    }
</body>
</html> 