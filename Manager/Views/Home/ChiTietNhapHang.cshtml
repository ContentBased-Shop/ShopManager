@model List<Manager.Models.ChiTietNhapHang>

<h3>Thông tin phiếu nhập</h3>
<p><strong>Mã phiếu nhập:</strong> @ViewBag.NhapHang.MaNhapHang</p>
<p><strong>Nhà cung cấp:</strong> @ViewBag.NhapHang.MaNhaCungCap</p>
<p><strong>Nhân viên:</strong> @ViewBag.NhapHang.MaNhanVien</p>
<p><strong>Tổng tiền:</strong> @String.Format("{0:N0}₫", ViewBag.NhapHang.TongTien)</p>
<p><strong>Ngày nhập:</strong> @Convert.ToDateTime(ViewBag.NhapHang.NgayNhap).ToString("dd/MM/yyyy HH:mm")</p>

<h3>Chi tiết nhập hàng</h3>
<table class="table">
    <thead>
        <tr>
            <th>Mã biến thể</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaBienThe</td>
                <td>@item.SoLuong</td>
                <td>@String.Format("{0:N0}₫", item.DonGia)</td>
            </tr>
        }
    </tbody>
</table>
