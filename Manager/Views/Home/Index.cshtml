@{
    ViewBag.Title = "Đăng nhập Quản lý";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            background: linear-gradient(135deg, #2e7d32, #4caf50);
            height: 100vh;
            overflow: hidden;
            margin: 0;
            padding: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .backdrop {
            position: absolute;
            width: 100%;
            height: 100%;
            background-image: url('https://images.unsplash.com/photo-1460925895917-afdab827c52f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1920&q=80');
            background-size: cover;
            background-position: center;
            filter: blur(8px);
            opacity: 0.6;
            z-index: -1;
        }

        .main-container {
            width: 80%;
            max-width: 1200px;
            height: 600px;
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
            display: flex;
            overflow: hidden;
        }

        .left-section {
            flex: 1;
            padding: 40px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            color: white;
        }

        .right-section {
            width: 400px;
            background: white;
            padding: 40px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            border-radius: 20px 0 0 20px;
            box-shadow: -10px 0 15px rgba(0, 0, 0, 0.1);
            z-index: 2;
        }

        .login-form {
            width: 100%;
        }

        .form-title {
            color: #2e7d32;
            font-size: 28px;
            font-weight: 700;
            margin-bottom: 5px;
            text-align: center;
        }
        
        .admin-badge {
            display: inline-block;
            background-color: #2e7d32;
            color: white;
            font-size: 12px;
            font-weight: 600;
            padding: 3px 10px;
            border-radius: 20px;
            margin: 0 auto 25px;
        }

        .form-control {
            background-color: #f7f7f7;
            border: none;
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 20px;
            transition: all 0.3s;
        }

        .form-control:focus {
            background-color: #fff;
            box-shadow: 0 0 0 2px #4caf50;
        }

        .form-label {
            font-weight: 600;
            color: #555;
        }

        .btn-login {
            background: linear-gradient(135deg, #2e7d32, #4caf50);
            border: none;
            border-radius: 10px;
            color: white;
            font-weight: 600;
            padding: 15px;
            transition: all 0.3s;
            margin-top: 15px;
        }

        .btn-login:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }

        .error-message {
            color: #ff4757;
            background-color: rgba(255, 71, 87, 0.1);
            border-left: 3px solid #ff4757;
            padding: 10px 15px;
            margin-bottom: 20px;
            border-radius: 0 5px 5px 0;
        }

        .brand-logo {
            font-size: 40px;
            font-weight: 800;
            background: linear-gradient(135deg, #fff, #e6e6e6);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
        }
        
        .brand-logo i {
            margin-right: 15px;
            font-size: 36px;
            color: #fff;
        }

        .brand-slogan {
            font-size: 18px;
            margin-bottom: 20px;
            opacity: 0.9;
        }
        
        .admin-features {
            margin: 20px 0;
            padding: 0;
            list-style: none;
        }
        
        .admin-features li {
            margin-bottom: 10px;
            display: flex;
            align-items: center;
        }
        
        .admin-features li i {
            margin-right: 10px;
            color: #8bc34a;
            font-size: 18px;
        }

        .forgot-password {
            text-align: right;
            margin-bottom: 15px;
        }

        .forgot-password a {
            color: #2e7d32;
            text-decoration: none;
            font-size: 14px;
            transition: all 0.3s;
        }

        .forgot-password a:hover {
            color: #4caf50;
            text-decoration: underline;
        }

        .input-group {
            position: relative;
            margin-bottom: 20px;
        }

        .input-icon {
            position: absolute;
            top: 50%;
            left: 15px;
            transform: translateY(-50%);
            color: #999;
        }

        .input-with-icon {
            padding-left: 45px;
        }
    </style>
</head>
<body>
    <div class="backdrop"></div>
    <div class="main-container">
        <div class="left-section">
            <div class="brand-logo"><i class="fas fa-shield-alt"></i>PRIMETECH</div>
            <div class="brand-slogan">Hệ thống quản lý doanh nghiệp chuyên nghiệp</div>
            <p>Truy cập vào hệ thống quản lý để điều hành doanh nghiệp của bạn một cách hiệu quả.</p>
            
            <ul class="admin-features">
                <li><i class="fas fa-chart-line"></i> Theo dõi doanh thu và hiệu suất kinh doanh</li>
                <li><i class="fas fa-box"></i> Quản lý hàng tồn kho và sản phẩm</li>
                <li><i class="fas fa-users"></i> Quản lý nhân viên và phân quyền</li>
                <li><i class="fas fa-shopping-cart"></i> Theo dõi đơn hàng và thanh toán</li>
                <li><i class="fas fa-cog"></i> Cấu hình và cài đặt hệ thống</li>
            </ul>
        </div>
        <div class="right-section">
            <div class="login-form">
                <h2 class="form-title">Đăng nhập</h2>
                <div class="admin-badge text-center">Dành cho quản trị viên</div>
                @if (ViewBag.Error != null)
                {
                    <div class="error-message">
                        <i class="fas fa-exclamation-circle me-2"></i>@ViewBag.Error
                    </div>
                }
                @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                {
                    <div class="input-group">
                        <i class="fas fa-user input-icon"></i>
                        <input type="text" class="form-control input-with-icon" id="username" name="username" placeholder="Tên đăng nhập quản trị" required>
                    </div>
                    <div class="input-group">
                        <i class="fas fa-lock input-icon"></i>
                        <input type="password" class="form-control input-with-icon" id="password" name="password" placeholder="Mật khẩu" required>
                    </div>
                    <div class="forgot-password">
                        <a href="#">Quên mật khẩu?</a>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-login">Đăng nhập hệ thống</button>
                    </div>
                }
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
