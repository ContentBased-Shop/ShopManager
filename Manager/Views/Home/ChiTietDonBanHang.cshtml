@model Manager.Models.ChiTietDonHangViewModel

<h2>Thông tin đơn hàng: @Model.DonHang.MaDonHang</h2>

<p><strong>Trạng thái đơn hàng:</strong> @Model.DonHang.TrangThaiDonHang</p>
<p><strong>Trạng thái thanh toán:</strong> @Model.DonHang.TrangThaiThanhToan</p>
<p><strong>Tổng tiền:</strong> @Model.DonHang.TongTien.ToString("N0") ₫</p>
<p><strong>Ngày tạo:</strong> @(Convert.ToDateTime(Model.DonHang.NgayTao).ToString("dd/MM/yyyy HH:mm"))</p>


<hr />
<h3>Thông tin thanh toán</h3>
@if (Model.ThanhToan != null)
{
    <p><strong>Phương thức:</strong> @Model.ThanhToan.PhuongThucThanhToan</p>
    <p><strong>Mã giao dịch:</strong> @Model.ThanhToan.MaGiaoDich</p>
    <p><strong>Trạng thái:</strong> @Model.ThanhToan.TrangThai</p>
}
else
{
    <p>Chưa có thông tin thanh toán</p>
}

<hr />
<h3>Thông tin giao hàng</h3>
@if (Model.GiaoHang != null)
{
    <p><strong>Mã vận đơn:</strong> @Model.GiaoHang.MaVanDon</p>
    <p><strong>Đơn vị vận chuyển:</strong> @Model.GiaoHang.DonViVanChuyen</p>
    <p><strong>Trạng thái giao hàng:</strong> @Model.GiaoHang.TrangThaiGiaoHang</p>
}
else
{
    <p>Chưa có thông tin giao hàng</p>
}

<hr />
<h3>Chi tiết đơn hàng</h3>
<table class="table">
    <thead>
        <tr>
            <th>Mã biến thể</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ChiTietDonHangs)
        {
            <tr>
                <td>@item.MaBienThe</td>
                <td>@item.SoLuong</td>
                <td>@item.DonGia.ToString("N0") ₫</td>
            </tr>
        }
    </tbody>
</table>
