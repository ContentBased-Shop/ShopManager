<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - HAT Shop</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" ></script>

</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="border-end bg-dark" id="sidebar-wrapper">
            <div class="sidebar-heading text-white text-center py-4 fw-bold border-bottom">
                <a href="/home/Dashboard">
                    <img src="~/Content/img/logo.png" style="width: 50px;" />
                    <div>SWOO</div>
                </a>
            </div>
            <div class="list-group list-group-flush">
                <!-- Dashboard -->
                <a href="/Home/Dashboard" class="list-group-item list-group-item-action bg-dark text-white">
                    <i class="bi bi-speedometer2"></i> Dashboard
                </a>

                <!-- Quản lý sản phẩm -->
                <a class="list-group-item list-group-item-action bg-dark text-white" data-bs-toggle="collapse" href="#collapseProduct">
                    <i class="bi bi-box-seam"></i> Quản lý sản phẩm
                </a>
                <div class="collapse ps-3" id="collapseProduct">
                    <a href="/Home/DanhSachHangHoa" class="list-group-item list-group-item-action bg-dark text-white">Danh sách sản phẩm</a>
                    <a href="/Home/TaoHangHoa" class="list-group-item list-group-item-action bg-dark text-white">Thêm sản phẩm</a>
                    <a href="/Home/DanhSachDanhMuc" class="list-group-item list-group-item-action bg-dark text-white">Danh mục</a>
                    <a href="/Home/DanhSachThuongHieu" class="list-group-item list-group-item-action bg-dark text-white">Thương hiệu</a>
                </div>

                <!-- Quản lý đơn hàng -->
                <a class="list-group-item list-group-item-action bg-dark text-white" data-bs-toggle="collapse" href="#collapseOrder">
                    <i class="bi bi-receipt"></i> Quản lý đơn hàng
                </a>
                <div class="collapse ps-3" id="collapseOrder">
                    <a href="/Home/DanhSachDonBanHang" class="list-group-item list-group-item-action bg-dark text-white">Đơn hàng bán</a>
                    <a href="/Home/DanhSachNhapHang" class="list-group-item list-group-item-action bg-dark text-white">Đơn hàng nhập</a>
                    <a href="/Home/DanhSachNhaCungCap" class="list-group-item list-group-item-action bg-dark text-white">Nhà cung cấp</a>
                </div>

                <!-- Quản lý khách hàng -->
                <a class="list-group-item list-group-item-action bg-dark text-white" data-bs-toggle="collapse" href="#collapseCustomer">
                    <i class="bi bi-people"></i> Quản lý khách hàng
                </a>
                <div class="collapse ps-3" id="collapseCustomer">
                    <a href="/Home/DanhSachKhachHang" class="list-group-item list-group-item-action bg-dark text-white">Danh sách khách hàng</a>
                    <a href="/Home/DanhSachDanhGia" class="list-group-item list-group-item-action bg-dark text-white">Đánh giá sản phẩm</a>
                </div>

                <!-- Quản lý khuyến mãi -->
                <a class="list-group-item list-group-item-action bg-dark text-white" data-bs-toggle="collapse" href="#collapsePromotion">
                    <i class="bi bi-gift"></i> Quản lý khuyến mãi
                </a>
                <div class="collapse ps-3" id="collapsePromotion">
                    <a href="/Home/DanhSachVoucher" class="list-group-item list-group-item-action bg-dark text-white">Voucher</a>
                </div>

                <!-- Quản lý nhân viên -->
                <a class="list-group-item list-group-item-action bg-dark text-white" data-bs-toggle="collapse" href="#collapseStaff">
                    <i class="bi bi-person-badge"></i> Quản lý nhân viên
                </a>
                <div class="collapse ps-3" id="collapseStaff">
                    <a href="/Home/DanhSachNhanVien" class="list-group-item list-group-item-action bg-dark text-white">Danh sách nhân viên</a>
                </div>

                <!-- Báo cáo thống kê -->
                <a class="list-group-item list-group-item-action bg-dark text-white" data-bs-toggle="collapse" href="#collapseReport">
                    <i class="bi bi-graph-up"></i> Báo cáo thống kê
                </a>
                <div class="collapse ps-3" id="collapseReport">
                    <a href="/Home/BaoCaoDoanhThu" class="list-group-item list-group-item-action bg-dark text-white">Báo cáo doanh thu</a>
                    <a href="/Home/BaoCaoSanPham" class="list-group-item list-group-item-action bg-dark text-white">Báo cáo sản phẩm</a>
                    <a href="/Home/BaoCaoKhachHang" class="list-group-item list-group-item-action bg-dark text-white">Báo cáo khách hàng</a>
                </div>
            </div>
        </div>

        <!-- Page Content -->
        <div id="page-content-wrapper" class="w-100">
            <!-- Header -->
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <div class="container-fluid">
                    <button class="btn btn-primary" id="menu-toggle">></button>
                    <nav class="navbar navbar-expand-lg navbar-light bg-light">
                        <div class="container-fluid">
                            <div class="ms-3 d-flex align-items-center">
                                @if (Session["UserName"] != null)
                                {
                                    <span class="navbar-text me-3 fw-semibold">Xin chào, @Session["UserName"]</span>
                                    <a href="@Url.Action("Logout", "Home")" class="btn btn-outline-danger btn-sm">Đăng xuất</a>
                                }
                            </div>
                        </div>
                    </nav>
                </div>
            </nav>

            <!-- Main Content -->
            <div class="container-fluid mt-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- Sidebar toggle script -->
    <script>
        document.getElementById("menu-toggle").addEventListener("click", function () {
            document.getElementById("wrapper").classList.toggle("toggled");
        });
    </script>

    <style>
        #wrapper.toggled #sidebar-wrapper {
            margin-left: -250px;
        }

        #sidebar-wrapper {
            width: 250px;
            min-height: 100vh;
            transition: margin 0.25s ease-out;
        }

        #page-content-wrapper {
            flex: 1;
        }

        .list-group-item {
            border: none;
        }

            .list-group-item:hover {
                background-color: #343a40;
            }

        .collapse {
            background-color: #212529;
        }
    </style>
</body>
</html>
