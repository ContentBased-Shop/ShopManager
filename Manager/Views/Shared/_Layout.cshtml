<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - TênWebsite</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="d-flex" id="wrapper">

        <!-- Sidebar -->
        <div class="border-end bg-dark" id="sidebar-wrapper">
            <div class="sidebar-heading text-white text-center py-4 fw-bold border-bottom">
                <a href="/home/Dashboard">
                    <img src="~/Content/img/logo.png" style="width: 50px;" />
                    <div>H A T</div>
                </a>
               
            </div>
            <div class="list-group list-group-flush">
                <a class="list-group-item list-group-item-action bg-dark text-white" data-bs-toggle="collapse" href="#collapseProduct">
                    <i class="bi bi-box-seam"></i> Sản phẩm
                </a>
                <div class="collapse ps-3" id="collapseProduct">
                    <a href="/Home/DanhSachHangHoa" class="list-group-item list-group-item-action bg-dark text-white">Danh sách sản phẩm</a>
                    <a href="/Home/TaoHangHoa" class="list-group-item list-group-item-action bg-dark text-white">Thêm sản phẩm</a>
                </div>

                <a class="list-group-item list-group-item-action bg-dark text-white" data-bs-toggle="collapse" href="#collapseCategory">
                    <i class="bi bi-tags"></i> Danh mục
                </a>
                <div class="collapse ps-3" id="collapseCategory">
                    <a href="#" class="list-group-item list-group-item-action bg-dark text-white">Tất cả danh mục</a>
                </div>

                <a class="list-group-item list-group-item-action bg-dark text-white" data-bs-toggle="collapse" href="#collapseOrder">
                    <i class="bi bi-receipt"></i> Đơn hàng
                </a>
                <div class="collapse ps-3" id="collapseOrder">
                    <a href="/Home/DanhSachDonBanHang" class="list-group-item list-group-item-action bg-dark text-white">Tất cả đơn hàng</a>
                </div>

                <a class="list-group-item list-group-item-action bg-dark text-white" data-bs-toggle="collapse" href="#collapseCustomer">
                    <i class="bi bi-people"></i> Khách hàng
                </a>
                <div class="collapse ps-3" id="collapseCustomer">
                    <a href="/Home/DanhSachKhachHang" class="list-group-item list-group-item-action bg-dark text-white">Danh sách khách hàng</a>
                </div>

                <a class="list-group-item list-group-item-action bg-dark text-white" data-bs-toggle="collapse" href="#collapseReport">
                    <i class="bi bi-box-seam"></i> Báo cáo - thống kê
                </a>
                <div class="collapse ps-3" id="collapseReport">
                    <a href="#" class="list-group-item list-group-item-action bg-dark text-white">Báo cáo</a>
                    <a href="#" class="list-group-item list-group-item-action bg-dark text-white">Thống kê</a>
                </div>
            </div>
        </div>

        <!-- Page Content -->
        <div id="page-content-wrapper" class="w-100">

            <!-- Header -->
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <div class="container-fluid">
                    <button class="btn btn-primary" id="menu-toggle">></button>
                    <nav class="navbar navbar-expand-lg navbar-light bg-light">
                        <div class="container-fluid">
                            <div class="ms-3 d-flex align-items-center">
                                <span class="navbar-text me-3 fw-semibold">Xin chào, @ViewBag.UserName</span>
                                <a href="/Account/Logout" class="btn btn-outline-danger btn-sm">Đăng xuất</a>
                            </div>
                        </div>
                    </nav>

                </div>
            </nav>

            <!-- Main Content -->
            <div class="container-fluid mt-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- Sidebar toggle script -->
    <script>
        document.getElementById("menu-toggle").addEventListener("click", function () {
            document.getElementById("wrapper").classList.toggle("toggled");
        });
    </script>

    <style>
        #wrapper.toggled #sidebar-wrapper {
            margin-left: -250px;
        }

        #sidebar-wrapper {
            width: 250px;
            min-height: 100vh;
            transition: margin 0.25s ease-out;
        }

        #page-content-wrapper {
            flex: 1;
        }
    </style>
</body>

</html>
